{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtSettings": {
    "Issuer": "IssuerName",
    "Audience": "AudienceName",
    "SignKey": "bTNGPmniBGyINHPdsmONct16TIqqb1bZ"
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth-api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth-api"
          },
          {
            "RequestHeaderOriginalHost": "true"
          }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "cluster1": {
            "Address": "http://auth-service:8080"
          }
        },
        "HttpClient": {
          "Timeout": "00:00:20"
        }
      }
    }
  }
}