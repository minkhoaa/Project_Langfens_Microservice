{
  "name": "langfens",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "test": "vitest",
    "test:run": "vitest run",
    
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:visual": "playwright test --headed --project=chromium",
    "e2e:slow": "SLOW_MO=500 playwright test --headed --project=chromium --workers=1",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report",
    
    "e2e:auth": "playwright test e2e/auth.spec.ts --headed --project=chromium",
    "e2e:security": "playwright test e2e/security-edge.spec.ts e2e/auth-lockout.spec.ts --headed --project=chromium",
    "e2e:api": "playwright test e2e/api-endpoints.spec.ts --headed --project=chromium",
    "e2e:pages": "playwright test e2e/missing-pages.spec.ts e2e/sanity.spec.ts --headed --project=chromium",
    "e2e:dictionary": "playwright test e2e/dictionary.spec.ts --headed --project=chromium",
    "e2e:flashcard": "playwright test e2e/flashcard-learning.spec.ts --headed --project=chromium",
    "e2e:exam": "playwright test e2e/exam-simulation.spec.ts --headed --project=chromium",
    "e2e:mobile": "playwright test e2e/mobile-layout.spec.ts --headed --project=chromium"
  },
  "dependencies": {
    "audiobuffer-to-wav": "^1.0.0",
    "axios": "^1.12.2",
    "framer-motion": "^12.23.24",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.546.0",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-media-recorder": "^1.7.2",
    "remark-gfm": "^4.0.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.15",
    "jsdom": "^27.3.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.15"
  }
}
